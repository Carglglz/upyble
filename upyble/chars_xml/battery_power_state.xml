				</Bit>
				<Bit index="4" size="2">
					<Enumerations>
						<Enumeration key="0" value="Unknown"/>
						<Enumeration key="1" value="Not Chargeable"/>
						<Enumeration key="2" value="Not Charging (Chargeable)"/>
						<Enumeration key="3" value="Charging (Chargeable)"/>
					</Enumerations>
				</Bit>
				<Bit index="6" size="2">
					<Enumerations>
						<Enumeration key="0" value="Unknown"/>
