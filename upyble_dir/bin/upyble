                    print('')

        else:
            for char in args.c:
                print('Characteristic: {}'.format(char))
                print('<-----Characteristic Metadata XML---->')
                char_xml = get_XML_CHAR(char)
                print(char_xml._raw)
        sys.exit()
    except Exception as e:
        try:
            if args.xml:
                for char in args.c:
                    # print('Characteristic: {}'.format(char))
                    # print('<-----Characteristic Metadata XML---->')
                    print(get_raw_XML_CHAR(char))
            else:
                print(e)
                print('XML not available or malformed')
        except Exception as e:
            print(e)
            print('XML not available or malformed')
        sys.exit()

